<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/metadata') %>
    <%- include('../partials/style-links') %>
    <link rel="stylesheet" href="css/forms.css">
    <title> <%= title %> </title>
</head>
<body>
    <div class="login-form-ctn">
        <form class="login-form">
            <h1>Iniciar Sesion</h1>
            <label>
                Nombre:
                <input class="user-input" name="username" type="text" placeholder="Usuario">
            </label>
            <label>
                Contraseña:
                <input class="user-input" name="password" type="password" placeholder="Contraseña">
            </label>
            <input class="login-add" type="submit" value="Enviar">
        </form>
    </div>

    <%- include('../partials/bootstrap-script') %>
    <script src="js/loginUser.js"></script>
</body>
</html>